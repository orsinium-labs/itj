<div class="card">
  <div class="card-header">
    <a href={@offer.url} target="_blank">
      {@offer.title}
    </a>
    <span class="badge bg-primary" :if={@offer.remote}>
      remote
    </span>
  </div>
  <div class="card-body">
    <p class="card-text">
      <i class="fas fa-building"></i>
      {@offer.company.title}
      <i class="fas fa-flag"></i>
      {@offer.country_code}
      <i class="fas fa-map-marker"></i>
      {@offer.city}
    </p>
  </div>
</div>
